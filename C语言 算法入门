/*三整数排序*/
#include<stdio.h>
int main(){
	int a,b,c,t;
	scanf("%d%d%d",&a,&b,&c);
	if(a>b){
		t=a;
		a=b;
		b=t;
	}
	if(a>c){
		t=a;
		c=a;
		c=t;
	}
	if(b>c){
		t=b;
		c=b;
		b=c;
	}
	 printf("%d %d %d\n",a,b,c);
	return 0;
}



/*三位数反转*/
#include<stdio.h>
int main(){
	int a,b;
	scanf("%d",&a);
	b=(a%10)*100+(a/10%10)*10+(a/100);
	printf("%03d\n",b);
	
	return 0;
}




/*鸡兔同笼，先输出鸡的数量，再输出兔的数量*/
#include<stdio.h>
int main(){
	int n,m,a,b;/*n是总头数，m是总腿数,a是鸡的数量*/
	scanf("%d %d",&n,&m);
	b=(m-2*n)/2;
	a=n-b;
	if(a<0||b<0||m%2==1){
		printf("此题无解"); 
	}
	else
		printf("%d %d",a,b);
	return 0;
}


