#include <stdio.h>
//计算调和级数的和
int main() {
    int n, i;
    int a = 1;
    float sum = 0.0;
    while (a == 1) {
    printf("输入n的值：");
    scanf_s("%d", &n);
    for (i = 1;i <= n;i++) {
        sum += 1.0 / i;
    }
    printf("前%d项的和是：%4f\n", n, sum);
    printf("还要继续吗，继续请输入1，否则输入0");
    scanf_s("%d", &a);
    }
    printf("谢谢您的使用！");
    return 0;
}
